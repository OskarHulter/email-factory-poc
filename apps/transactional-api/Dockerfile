FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system transactional-api && \
          adduser --system -G transactional-api transactional-api

COPY dist/apps/transactional-api transactional-api
RUN chown -R transactional-api:transactional-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix transactional-api --omit=dev -f install

CMD [ "node", "transactional-api" ]
